from google.colab import files
import os
import subprocess
from IPython.display import HTML, display
import shutil
import re

def extract_number(filename):
  
    match = re.search(r'V(\d+)\.mp4$', filename, re.IGNORECASE)
    return int(match.group(1)) if match else None

def reverse_video_con_audio(input_path, output_path):
    try:
        cmd = [
            'ffmpeg',
            '-i', input_path,
            '-vf', 'reverse',
            '-af', 'areverse',
            '-y',
            output_path
        ]

        print(f"Procesando: {os.path.basename(input_path)}")
        result = subprocess.run(cmd, capture_output=True, text=True)

        if result.returncode == 0:
            print(f"Video generado: {os.path.basename(output_path)}")
            return True
        else:
            print(f"Error: {result.stderr[:200]}...")
            return False

    except Exception as e:
        print(f"Error procesando: {str(e)}")
        return False

def mostrar_video(video_path):
    from base64 import b64encode
    video_file = open(video_path, "rb").read()
    data_url = "data:video/mp4;base64," + b64encode(video_file).decode()
    return HTML(f"""
    <div style="margin: 10px 0;">
        <h4>{os.path.basename(video_path)}</h4>
        <video width="400" controls>
            <source src="{data_url}" type="video/mp4">
        </video>
    </div>
    """)

def main():

    shutil.rmtree('/content/videos_originales', ignore_errors=True)
    shutil.rmtree('/content/videos_revertidos', ignore_errors=True)
    
    os.makedirs('/content/videos_originales', exist_ok=True)
    os.makedirs('/content/videos_revertidos', exist_ok=True)

    print("SUBE TUS VIDEOS (puedes seleccionar múltiples)")
    uploaded = files.upload()

    if not uploaded:
        print("No se subieron archivos")
        return


    for filename in uploaded.keys():
        shutil.move(filename, f'/content/videos_originales/{filename}')

    print(f"Videos subidos: {list(uploaded.keys())}")
    print()


    print("REVIRTIENDO VIDEOS CON NUEVA NUMERACIÓN...")
    
    for filename in uploaded.keys():
        input_path = f'/content/videos_originales/{filename}'
        

        original_number = extract_number(filename)
        
        if original_number is None:
            print(f"Saltando {filename}: No tiene formato V001.mp4")
            continue
        
        new_number = original_number + 50
        new_filename = f"V{new_number:03d}.mp4"
        output_path = f'/content/videos_revertidos/{new_filename}'

        print(f"  {filename} -> {new_filename}")
      
        success = reverse_video_con_audio(input_path, output_path)
        
        if success:
            print(f"  {filename} revertido como {new_filename}")
        else:
            print(f"  Error revirtiendo {filename}")
        
        print()

    print("DESCARGAR VIDEOS REVERTIDOS")

    shutil.make_archive('videos_revertidos', 'zip', '/content/videos_revertidos')

    print("Descargando archivo ZIP con todos los videos revertidos...")
    files.download('videos_revertidos.zip')

    print("\nPREVIEW DE VIDEOS REVERTIDOS:")
    revertidos = os.listdir('/content/videos_revertidos')
    for video in sorted(revertidos):
        if video.endswith('.mp4'):
            video_path = f'/content/videos_revertidos/{video}'
            display(mostrar_video(video_path))

    print("¡Proceso completado!")

if __name__ == "__main__":
    main()
